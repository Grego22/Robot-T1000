<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Directory</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <div class="user">
      <div class="profile">
        <figure>
          <img src="{{avatar}}" alt="Portrait">
        </figure>
        <div class="contact">
          <h1>{{name}}</h1>
          <p>
            {{#address.city}}
            {{address.city}},
            {{/address.city}}
            {{address.country}} |
            {{#job}}
            {{job}}, {{company}}
            {{/job}}
            {{^job}}
            <span class="employment">Available for Hire</span>
            {{/job}}
          </p>
          <p>{{email}} | {{phone}}</p>
        </div>
      </div>
      <div class="educations">
        <dl>
          {{#university}}
          <dt>Education</dt>
          <dd>{{university}}</dd>
          {{/university}}
          <dt>Skills</dt>
          {{#skills}}
          <dd>{{.}}</dd>
          {{/skills}}
        </dl>
      </div>
    </div>
  </body>
</html>
